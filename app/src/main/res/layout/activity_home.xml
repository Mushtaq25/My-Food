<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF6F6"
    android:clickable="true"
    android:contextClickable="true"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#B7DFC6C6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="3dp"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right|end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_search_24" />

            <ImageView
                android:id="@+id/logout"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:contextClickable="true"
                android:hapticFeedbackEnabled="false"
                app:srcCompat="@drawable/ic_baseline_more_vert_24" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:background="#B7DFC6C6"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnhome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="10dp"
            app:srcCompat="@drawable/ic_baseline_home_24" />

        <ImageButton
            android:id="@+id/btn_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="10dp"
            app:srcCompat="@drawable/ic_baseline_group_24" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingBottom="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="2dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C3D6CFCF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:filterTouchesWhenObscured="false"
                    android:fitsSystemWindows="false"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/pizza" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ABDCD1D1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|left"
                    android:layout_marginStart="5dp"
                    android:gravity="center|left"
                    android:text="Assam"
                    android:textColor="#009688"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <Spinner
                    android:id="@+id/district"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:dropDownWidth="wrap_content"
                    android:entries="@array/district_arrays"
                    android:padding="5dp"
                    android:prompt="@string/district" />

                <ImageButton
                    android:id="@+id/btn_Go"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_baseline_forward_24" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/Zafir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL1"
        android:layout_centerInParent="false"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_baseline_person_outline_24"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/tv_Not_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL1"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="-3dp"
        android:padding="5dp"
        android:text="Sorry Our Service is currently not Available on the selected location"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="italic"
        android:visibility="invisible"
        tools:visibility="invisible" />

</RelativeLayout>
